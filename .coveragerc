[run]
source = src
branch = True

omit =
    # Tests are never counted
    src/**/tests/*

    # Package markers
    **/__init__.py

    # Generated OpenAPI clients
    src/slack_generated_client/*
    src/slack_generated_client/**

    # Standalone service apps (integration-only)
    src/mail_client_service/*
    src/mail_client_service/**

    # FastAPI entrypoints / wiring (tested via integration)
    src/slack_service/main.py
    src/slack_service/routes.py

    # Legacy or wrapper clients not used directly
    src/email_api/client.py

    # Tooling / env noise
    */.venv/*
    */site-packages/*
    */__pycache__/*

[report]
show_missing = True
fail_under = 85
