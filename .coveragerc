[coverage:run]
source = src
branch = True

omit =
    # -------------------------
    # Generated OpenAPI clients
    # -------------------------
    src/slack_generated_client/**
    src/ai_generated_client/**
    src/jira_generated_client/**

    # -------------------------
    # Email / Gmail vertical (explicitly excluded)
    # -------------------------
    src/email_api/**
    src/gmail_impl/**
    src/mail_client_service/**
    src/mail_client_adapter/**

    # -------------------------
    # Environment noise
    # -------------------------
    */.venv/*
    */site-packages/*
    */__pycache__/*


[coverage:report]
fail_under = 85
show_missing = True
